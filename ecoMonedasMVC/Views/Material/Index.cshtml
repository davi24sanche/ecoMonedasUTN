@model IEnumerable<ecoMonedasMVC.Models.Material>

@{
    ViewBag.Title = "Materiales de Reciclaje";

    Layout = "~/Views/Shared/_LayoutMantenimiento.cshtml";
}


<div class="container">
    <div class="col-lg-12">
        <h2>Mantenimiento de Materiales de Reciclaje</h2>

        <p>
            @Html.ActionLink("Crear Nuevo Material", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Colores.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precioUnidad)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colores.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        <img src="~/Content/Imagenes/@Html.DisplayFor(modelItem => item.imagen)" style="max-height:50px;max-width:50px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precioUnidad)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id })
                    </td>
                </tr>
            }

        </table>

        @Html.ActionLink("Volver al panel de usuario", "VolverAlPanelUsuario", new { @class = "btn btn-primary" })
    </div>
</div>